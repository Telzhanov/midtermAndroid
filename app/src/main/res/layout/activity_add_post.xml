<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addPost.AddPostActivity">

    <EditText
        android:padding="8dp"
        android:hint="title"
        android:id="@+id/titlePost"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"/>

    <EditText
        android:padding="8dp"
        android:hint="desc"
        android:id="@+id/descPost"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/titlePost"
        app:layout_constraintStart_toStartOf="@id/titlePost"
        app:layout_constraintTop_toBottomOf="@+id/titlePost" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Add"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/titlePost"
        app:layout_constraintStart_toStartOf="@id/titlePost"
        app:layout_constraintTop_toBottomOf="@+id/descPost"
        />
</android.support.constraint.ConstraintLayout>